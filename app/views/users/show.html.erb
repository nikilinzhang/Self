<!DOCTYPE html>
<html>
<head>
  <title></title>
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
</head>
<body>
  <div class="top"> 
    <img class="photo" src="/lin.jpg"> 
    <div class="profile"> 
      <div class="profiletext">
        <h1><%= @users.FirstName %> <%= @users.LastName %></h1>
        <h4><%= @users.title %></h4>
        <br>
        <i class="fa fa-envelope-square" style="font-size:24px"> <%= @users.Email %></i>
        <br><br>
        <i class="fa fa-phone-square" style="font-size:24px"> <%= @users.Phone %></i>
        <br><br>
        <a href=<%= @users.linkedin %>><i class="fa fa-linkedin-square" style="font-size:36px;color:#33679e"></i></a>
      </div>
    </div>
  </div>
  <div class="introduction">
    <div class="introductiontext">
      <h4>
        "<%= @users.description %>"
      </h4>
    </div>
  </div>
  <div class="bottom">
    <div class="details">
      <a href='/'><img src="/home.png" style="position: absolute; width:10%;height:100%left: 25%;right: 80%;"> </a>
      <a href=<%= users_path(id:@users.id) %>><img src="/profile.png" style="position: absolute; width:10%;height:100%left: 25%;right: 60%;"> </a>
      <a href=<%= education_path(user_id:@users.id) %>><img src="/education.png" style="position: absolute; width:10%;height:100%left: 25%;right: 40%;"> </a>
      <a href=<%= education_path(user_id:@users.id)%>><img src="/experience.png" style="position: absolute; width:10%;height:100%left: 75%;right: 20%;"> </a>
    </div>
  </div>
</body>
</html>
